<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="right"
    android:orientation="vertical"
    android:padding="5dp">

    <TextView
        android:id="@+id/txt_send_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:gravity="right"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_send_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_for_offset_chat_bubble"
            android:layout_marginTop="2dp"
            android:background="@drawable/send_rounded_back"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/chat_bubble_top_bottom_padding"
            android:paddingLeft="@dimen/chat_bubble_left_right_padding"
            android:paddingRight="@dimen/chat_bubble_left_right_padding"
            android:paddingTop="@dimen/chat_bubble_top_bottom_padding"
            android:textColor="@android:color/white" />

        <ImageView
            android:id="@+id/img_send_status"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_gravity="bottom"
            android:background="@drawable/small_circle_back"
            android:padding="2dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_read" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_send_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginTop="2dp"
        android:textSize="11sp" />
</LinearLayout>